# ══════════════════════════════════════════════════════════════
#  .env  —  باشگاه فوتسال اسپاد
#  ⚠️  این فایل را هرگز در Git کامیت نکنید!
# ══════════════════════════════════════════════════════════════

# ── Django Core ────────────────────────────────────────────────
# برای تولید کلید جدید: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-replace-this-with-a-real-random-key-in-production

# DEBUG=True برای توسعه، DEBUG=False برای production
DEBUG=True

# هاست‌های مجاز — در production آدرس واقعی سرور را وارد کنید
ALLOWED_HOSTS=localhost,127.0.0.1

# ── Settings Module ────────────────────────────────────────────
# development برای محیط توسعه / production برای سرور
DJANGO_SETTINGS_MODULE=futsal_config.settings.development

# ── Database ───────────────────────────────────────────────────
# در development این را خالی بگذارید (SQLite استفاده می‌شود)
# در production با Docker:
# DATABASE_URL=postgres://futsal:futsal123@postgres:5432/futsal_db
DATABASE_URL=

# ── Redis ──────────────────────────────────────────────────────
# در development اگر Redis ندارید، خالی بگذارید (از حافظه استفاده می‌شود)
# در production با Docker:
# REDIS_URL=redis://redis:6379/0
REDIS_URL=

# ── Zarinpal درگاه پرداخت ──────────────────────────────────────
# کد مرچنت ۳۶ کاراکتری از پنل زرین‌پال
ZARINPAL_MERCHANT_ID=XXXXXXXX-XXXX-XXXX-XXXX-XXXXXXXXXXXX
# True = محیط آزمایشی (sandbox) / False = درگاه واقعی
ZARINPAL_SANDBOX=True

# ── Sentry (اختیاری — برای tracking خطاها در production) ──────
SENTRY_DSN=
