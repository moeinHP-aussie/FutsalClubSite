# ══════════════════════════════════════════════════════════════════
#  .env.example  —  Futsal Club Management System
#  Copy to .env and fill in real values
#  NEVER commit .env to version control
# ══════════════════════════════════════════════════════════════════

# ── Django Core ────────────────────────────────────────────────────
SECRET_KEY=change-me-to-a-long-random-string-at-least-50-chars
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost
DJANGO_SETTINGS_MODULE=futsal_config.settings.production

# ── Database ───────────────────────────────────────────────────────
DATABASE_URL=postgres://futsal:futsal123@postgres:5432/futsal_db
DB_PASSWORD=futsal123

# ── Redis / Celery ─────────────────────────────────────────────────
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# ── Payment Gateway ────────────────────────────────────────────────
ZARINPAL_MERCHANT_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
# ZARINPAL_SANDBOX=True    # Uncomment for sandbox/testing

# ── File Storage (local default — uncomment S3 for production) ─────
MEDIA_ROOT=/app/mediafiles
STATIC_ROOT=/app/staticfiles
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_STORAGE_BUCKET_NAME=
# AWS_S3_REGION_NAME=ir-thr-at1

# ── Admin First User ───────────────────────────────────────────────
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_PASSWORD=Admin@StrongPassword123

# ── Error Tracking ─────────────────────────────────────────────────
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# ── Domain ─────────────────────────────────────────────────────────
DOMAIN_NAME=yourdomain.com
HTTP_PORT=80
HTTPS_PORT=443
WORKERS=3
